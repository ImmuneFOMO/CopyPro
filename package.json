{
  "name": "copypro",
  "displayName": "CopyPro",
  "description": "Enhanced copy functionality for VS Code",
  "publisher": "ImmuneFOMO",
  "version": "0.0.2",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ImmuneFOMO/CopyPro"},
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:copypro.copyRelativePathWithContent",
    "onCommand:copypro.copyAllFilesFromDir",
    "onCommand:copypro.copyAbsolutePath",
    "onCommand:copypro.copyFileName",
    "onCommand:copypro.copyRelativePathWithLineNumber",
    "onCommand:copypro.copyRelativePath",
    "onCommand:copypro.copyPathRelativeToWorkspace"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copypro.copyRelativePathWithContent",
        "title": "CopyPro: Copy Relative Path with Content"
      },
      {
        "command": "copypro.copyAllFilesFromDir",
        "title": "CopyPro: Copy All Files from Directory"
      },
      {
        "command": "copypro.copyAbsolutePath",
        "title": "CopyPro: Copy Absolute Path"
      },
      {
        "command": "copypro.copyFileName",
        "title": "CopyPro: Copy File Name"
      },
      {
        "command": "copypro.copyRelativePathWithLineNumber",
        "title": "CopyPro: Copy Relative Path with Line Number"
      },
      {
        "command": "copypro.copyRelativePath",
        "title": "CopyPro: Copy Relative Path"
      },
      {
        "command": "copypro.copyPathRelativeToWorkspace",
        "title": "CopyPro: Copy Path Relative to Workspace"
      }
    ],
    "keybindings": [
      {
        "command": "copypro.copyRelativePathWithContent",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      },
      {
        "command": "copypro.copyAllFilesFromDir",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d"
      },
      {
        "command": "copypro.copyAbsolutePath",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a"
      },
      {
        "command": "copypro.copyFileName",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n"
      }
    ]
  },
"scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
},
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}